<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelView">
        <attr name="labelText1" format="string" />
        <attr name="labelText2" format="string"/>
        <attr name="labelTextColor" format="color"/>
        <attr name="labelTextSize" format="dimension"/>
        <attr name="labelLineColor" format="color"/>
        <attr name="labelLineSize" format="dimension"/>
        <attr name="labelHeaderColor" format="color"/>
        <attr name="labelHeaderShaderStartColor" format="color"/>
        <attr name="labelHeaderShaderEndColor" format="color"/>
        <attr name="labelHeaderRadius" format="dimension"/>
        <attr name="labelDirect" >
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="labelPositionX" format="float"/>
        <attr name="labelPositionY" format="float"/>
    </declare-styleable>

    <declare-styleable name="LabelImageView">
        <attr name="imageSrc" format="reference" />
        <attr name="imageScaleType">
            <enum name="FIT_XY" value="0"/>
            <enum name="FIT_CENTER" value="1"/>
            <enum name="CENTER" value="2"/>
            <enum name="CENTER_CROP" value="3"/>
            <enum name="CENTER_INSIDE" value="4"/>
        </attr>
    </declare-styleable>
</resources>
